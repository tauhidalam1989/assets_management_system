@model AMS.Models.UserProfileViewModel.UserProfileCRUDViewModel

@{
    ViewData["Title"] = Resource.UserProfile;
}

<div class="wrapper">
    <div class="panel panel-hash">
        <div class="panel-heading">
            <h4><b>@Resource.UserProfile</b></h4>
        </div>
        <div class="panel-body scroll panel-height">
            <input type="hidden" asp-for="UserProfileId" id="UserProfileId_Index" />
            <input type="hidden" asp-for="ApplicationUserId" id="ApplicationUserId_Index" />

            <div class="col-lg-8" id="divUserProfile">
                <partial name="~/Views/UserManagement/_ViewUserDetails.cshtml" />
                <br />
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input type="button" class="btn btn-success" id="EditUserProfile" value="@Resource.EditUserProfile"
                               onclick="AddEditUserAccount(document.getElementById('UserProfileId_Index').value,'@Resource.EditUser','@Resource.AddUser')" />
                        <input type="button" class="btn btn-danger" id="ResetPassword" value="@Resource.ResetPassword"
                               onclick="ResetPasswordGeneral('@Resource.ResetPassword')" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/UserProfile/UserProfile_CRUD.js"></script>
<script src="~/js/UserManagement/UserManagement_CRUD.js"></script>
