@model AMS.Models.AssetSubCategorieViewModel.AssetSubCategorieCRUDViewModel

@{
    ViewData["Title"] = @Resource.Create;
}
<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmAssetSubCategorie">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">@Resource.AssetCategoryId</label>
                    <div class="col-sm-9">
                        <select asp-for="AssetCategorieId" asp-items="@ViewBag._LoadddlAssetCategorie"
                            id="AssetCategorieId" class="form-control" style="width:100%;">
                            <option disabled selected>--- @Resource.Select ---</option>
                        </select>
                        <span asp-validation-for="AssetCategorieId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-3 col-form-label">@Resource.Name</label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label">@Resource.Description</label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                        <input type="button" id="btnSave" value="@Resource.Save" onclick="Save('@Resource.PleaseWait','@Resource.Save')" class="btn btn-info">
                        <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">@Resource.Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
