@model AMS.Models.AssetRequestViewModel.AssetRequestCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmAssetRequest">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="row">
                    <div class="col-6 col-sm-6">
                        <div class="form-group row">
                            <label asp-for="AssetId" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="AssetId" asp-items="@ViewBag.LoadddlAssetName" id="AssetId"
                                    class="form-control" style="width:100%;">
                                    <option disabled selected>--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="AssetId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RequestedEmployeeId" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="RequestedEmployeeId" asp-items="@ViewBag.LoadddlEmployee"
                                    id="RequestedEmployeeId" class="form-control" style="width:100%;">
                                    <option disabled selected>--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="RequestedEmployeeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ApprovedByEmployeeId" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="ApprovedByEmployeeId" asp-items="@ViewBag.LoadddlEmployee"
                                    id="ApprovedByEmployeeId" class="form-control" style="width:100%;">
                                    <option disabled selected>--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="ApprovedByEmployeeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RequestDetails" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="RequestDetails" class="form-control" id="RequestDetails"
                                    rows="3"></textarea>
                                <span asp-validation-for="RequestDetails" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6">
                        <div class="form-group row">
                            <label asp-for="Status" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="Status" id="Status" class="form-control" required>
                                    <option value="none" selected>Select Status</option>
                                    <option value="New">New</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Out Of Stock">Out Of Stock</option>
                                    <option value="Blocker">Blocker</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Hold">Hold</option>
                                    <option value="Rejected">Rejected</option>
                                    <option value="Accepted">Accepted</option>
                                    <option value="Close">Close</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RequestDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="RequestDate" class="form-control" id="RequestDate" type="Date" />
                                <span asp-validation-for="RequestDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ReceiveDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ReceiveDate" class="form-control" id="ReceiveDate" type="Date" />
                                <span asp-validation-for="ReceiveDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Comment" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="Comment" class="form-control" id="Comment" rows="2"></textarea>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input type="button" id="btnSave" value="Save" onclick="SaveAssetRequest()"
                                    class="btn btn-info">
                                <button type="button" id="btnClose" class="btn btn-danger"
                                    data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
    $(document).ready(function () {
        $("#AssetId").select2();
        $("#RequestedEmployeeId").select2();
        $("#ApprovedByEmployeeId").select2();
    });
</script>
