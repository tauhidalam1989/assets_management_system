@model AMS.Models.ManageUserRolesVM.AddNewRoleViewModel

@{
    ViewData["Title"] = Resource.Create;
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmAddNewRole">
                <div class="form-group">
                    <label class="control-label">@Resource.RoleName</label>
                    <input asp-for="RoleName" class="form-control" id="RoleName" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="button" id="btnSave" value="@Resource.Save" onclick="SaveAddNewRole()" class="btn btn-info">
                    <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">@Resource.Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>