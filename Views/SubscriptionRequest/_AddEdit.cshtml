@model AMS.Models.SubscriptionRequestViewModel.SubscriptionRequestCRUDViewModel

@{
    ViewData["Title"] = @Resource.Create;
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmSubscriptionRequest">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />
                <div class="form-group">
                    <label class="control-label">@Resource.Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Resource.TimeZone</label>
                    <input asp-for="TimeZone" class="form-control" />
                    <span asp-validation-for="TimeZone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="button" id="btnSave" value="@Resource.Save" onclick="SaveSubscriptionRequest()" class="btn btn-info">
                    <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">@Resource.Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
