@model AMS.Models.AssetViewModel.AssetCRUDViewModel

@{
    ViewData["Title"] = Resource.AssetSummaryReport;
}

<div class="row">
    <div class="col-md-5">
        <img src="@Model.CompanyInfoCRUDViewModel.Logo" class="" alt="" style="margin-bottom:20px; width:20%;">
    </div>
    <div class="col-md-5">
        <h4><b>Asset Information</b></h4>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <address style="margin-top:1px">
            <strong>@Model.CompanyInfoCRUDViewModel.Name</strong>
            <br>@Model.CompanyInfoCRUDViewModel.Address<br>
            <abbr><b>@Resource.Mobile : </b></abbr>@Model.CompanyInfoCRUDViewModel.Phone<br>
            <abbr><b>@Resource.Email : </b></abbr>@Model.CompanyInfoCRUDViewModel.Email<br>
            <abbr><b>@Resource.Website : </b></abbr>@Model.CompanyInfoCRUDViewModel.Website
        </address>
    </div>
    <div class="col-md-4 text-right">
        <div class="m-b-15"><strong>@Resource.PrintDate </strong>: @DateTime.Today.ToString("dd MMMM yyyy")</div>
    </div>
</div>

<style>
    .panel-heading {
        padding: 0px 0px;
        border-bottom: 0px solid transparent;
        border-top-left-radius: 0px;
        border-top-right-radius: 0px;
    }
</style>