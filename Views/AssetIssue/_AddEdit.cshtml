@model AMS.Models.AssetIssueViewModel.AssetIssueCRUDViewModel

@{
    ViewData["Title"] = "Create";
}

<div>
    <div class="row">
        <div class="col-md-12">
            <form id="frmAssetIssue">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="row">
                    <div class="col-6 col-sm-6">
                        <div class="form-group row">
                            <label asp-for="AssetId" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="AssetId" asp-items="@ViewBag.LoadddlAssetName" id="AssetId"
                                    class="form-control" style="width:100%;">
                                    <option disabled selected>--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="AssetId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RaisedByEmployeeId" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="RaisedByEmployeeId" asp-items="@ViewBag.LoadddlEmployee"
                                    id="RaisedByEmployeeId" class="form-control" style="width:100%;">
                                    <option disabled selected>--- SELECT ---</option>
                                </select>
                                <span asp-validation-for="RaisedByEmployeeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="IssueDescription" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="IssueDescription" class="form-control" id="IssueDescription"
                                    rows="3"></textarea>
                                <span asp-validation-for="IssueDescription" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Status" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <select asp-for="Status" id="Status" class="form-control" required>
                                    <option value="none" selected>Select Status</option>
                                    <option value="New">New</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Resolved">Resolved</option>
                                    <option value="Blocker">Blocker</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Hold">Hold</option>
                                    <option value="Rejected">Rejected</option>
                                    <option value="Accepted">Accepted</option>
                                    <option value="Close">Close</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 col-sm-6">
                        <div class="form-group row">
                            <label asp-for="ExpectedFixDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ExpectedFixDate" class="form-control" id="ExpectedFixDate" type="Date" />
                                <span asp-validation-for="ExpectedFixDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ResolvedDate" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input asp-for="ResolvedDate" class="form-control" id="ResolvedDate" type="Date" />
                                <span asp-validation-for="ResolvedDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Comment" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <textarea asp-for="Comment" class="form-control" id="Comment" rows="2"></textarea>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-9">
                                <input type="button" id="btnSave" value="Save" onclick="SaveAssetIssue()"
                                    class="btn btn-info">
                                <button type="button" id="btnClose" class="btn btn-danger"
                                    data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
